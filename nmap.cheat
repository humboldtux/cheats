% ping, sweep

# Ping sweep network ranges
sudo nmap -n -sn -iL <rangesfile> -oA <outpufile> -PE

% enumeration

# fast nmap
sudo nmap -n -Pn -T4 -F <ip>

# first basic nmap
sudo nmap -n -Pn -v -sC -sV -oA <outputfile> <ip>

# second basic all ports nmap
sudo nmap -n -Pn -v -p- --open -oA <outputfile> <ip>

# cidr2ip
nmap -sL <range> | awk '/Nmap scan report/{print $NF}'
